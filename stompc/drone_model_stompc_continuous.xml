//          0: West (+y),
//          1: South (+x)
//          2: East (-y),
//          3: North (-x)
bool can_move(int action, int step_length) {
    int N_cells_in_dir = fint(step_length / map_granularity);
    int drone_cells_to_cover = fint((drone_diameter + safety_range) / map_granularity);

    if(drone_cells_to_cover % 2 == 0) {
        drone_cells_to_cover += 1;
    }

    if(action == 0) {
        int lower_bound_x = x - (drone_cells_to_cover / 2);
        int upper_bound_x = x +  (drone_cells_to_cover / 2);
        int upper_bound_y = y + N_cells_in_dir;
        int i;
        int j;

        if(lower_bound_x &lt; 0 || upper_bound_x &gt; map_width || upper_bound_y &gt; map_height) {
            return false;
        }
        for(i = lower_bound_x; i &lt;= upper_bound_x; i++) {
            for(j = y + 1; j &lt;= upper_bound_y; j++) {
                if( map[j][i] == 100 || map[j][i] == -1) {
                    return false;
                }
            }
        }
        return true;
    }else if(action == 1) {

        int lower_bound_y = y - (drone_cells_to_cover / 2);
        int upper_bound_y = y +  (drone_cells_to_cover / 2);
        int upper_bound_x = x + N_cells_in_dir;

        int i;
        int j;

         if(lower_bound_y &lt; 0 || upper_bound_y &gt; map_height || upper_bound_x &gt; map_width) {
            return false;
        }
        for(i = x + 1; i &lt;= upper_bound_x; i++) {
            for(j = lower_bound_y; j &lt;= upper_bound_y; j++) {
                if(map[j][i] == 100 || map[j][i] == -1) {
                    return false;
                }
            }
        }
        return true;
    }else if(action == 2) {

        int lower_bound_x = x - (drone_cells_to_cover / 2);
        int upper_bound_x = x +  (drone_cells_to_cover / 2);
        int upper_bound_y = y - N_cells_in_dir;

        int i;
        int j;

        if(lower_bound_x &lt; 0 || upper_bound_x &gt; map_width || upper_bound_y &gt; map_height) {
            return false;
        }
        for(i = lower_bound_x; i &lt;= upper_bound_x; i++) {
            for(j = y - 1; j &gt;= upper_bound_y; j--) {
                if(map[j][i] == 100 || map[j][i] == -1) {
                    return false;
                }
            }
        }
        return true;
    }else if(action == 3) {

        int lower_bound_y = y - (drone_cells_to_cover / 2);
        int upper_bound_y = y +  (drone_cells_to_cover / 2);
        int upper_bound_x = x - N_cells_in_dir;

        int i;
        int j;

       if(lower_bound_y &lt; 0 ||upper_bound_y &gt; map_height || upper_bound_x &gt; map_width) {
            return false;
        }
        for(i = x - 1; i &gt;= upper_bound_x; i--) {
            for(j = lower_bound_y; j &lt;=upper_bound_y; j++) {
                if(map[j][i] == 100 || map[j][i] == -1) {
                    return false;
                }
            }
        }
        return true;
    }

    return false;
}</declaration>
